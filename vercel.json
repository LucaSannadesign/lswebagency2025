{
  "installCommand": "npm ci",
  "buildCommand": "npm run build",

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" },
        { "key": "X-Content-Type-Options",   "value": "nosniff" },
        { "key": "X-Frame-Options",          "value": "DENY" },
        { "key": "Referrer-Policy",          "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy",       "value": "geolocation=(), microphone=(), camera=()" },
        { "key": "Cross-Origin-Opener-Policy",  "value": "same-origin" },
        { "key": "Cross-Origin-Resource-Policy","value": "same-origin" },
        { "key": "X-DNS-Prefetch-Control",      "value": "on" },
        { "key": "X-Permitted-Cross-Domain-Policies", "value": "none" },

        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; base-uri 'self'; form-action 'self' https://www.paypal.com; frame-ancestors 'none'; upgrade-insecure-requests; frame-src 'self' https://www.google.com https://*.google.com https://www.paypal.com https://*.paypal.com; child-src 'self' https://www.google.com https://*.google.com https://www.paypal.com https://*.paypal.com; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com https://www.google.com https://www.gstatic.com; connect-src 'self' https://www.google-analytics.com https://region1.google-analytics.com https://www.googletagmanager.com https://www.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https://www.googletagmanager.com https://www.google-analytics.com https://www.paypalobjects.com https://maps.gstatic.com https://maps.googleapis.com https://*.googleusercontent.com https://www.google.com; font-src 'self' data:;"
        }
      ]
    },

    {
      "source": "/(grazie|404)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "noindex, nofollow" }
      ]
    },

    {
      "source": "/(_astro|assets|images|img|fonts|og)/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "redirects": [
    { "source": "/blog/blog/:path*",        "destination": "/blog/:path*",                  "permanent": true },

    { "source": "/servizi/local/:slug",     "destination": "/local/:slug",                  "permanent": true },
    { "source": "/servizi/local/:slug/",    "destination": "/local/:slug",                  "permanent": true },
    { "source": "/servizi/local",           "destination": "/local",                        "permanent": true },

    { "source": "/novita/local/:slug",      "destination": "/local/:slug",                  "permanent": true },
    { "source": "/novita/local/:slug/",     "destination": "/local/:slug",                  "permanent": true },
    { "source": "/novita/local-seo/:slug",  "destination": "/local/:slug",                  "permanent": true },
    { "source": "/novita/local-seo/:slug/", "destination": "/local/:slug",                  "permanent": true },
    { "source": "/novita/local",            "destination": "/local",                        "permanent": true },

    { "source": "/metodi-di-pagamento",     "destination": "/pagamenti",                    "permanent": true },
    { "source": "/servizi/pagamenti",       "destination": "/pagamenti",                    "permanent": true },

    { "source": "/servizi/local-seo",       "destination": "/servizi/local-seo-booster",    "permanent": true }
  ]
}