---
import fallbackImage from '@/assets/images/progettazione-landing-page.webp';
const fallbackSrc = typeof fallbackImage === 'string'
  ? fallbackImage
  : (fallbackImage as any).src;

import { Icon } from 'astro-icon/components';
import PostTags from '@/components/blog/Tags.astro';
import SocialShare from '@/components/common/SocialShare.astro';
import { getFormattedDate } from '@/utils/utils';

export interface Props {
  // Tipi volutamente ampi per tollerare front-matter non omogeneo
  post: Record<string, any>;
  url: string | URL;
}

const { post, url } = Astro.props as Props;

const title = post?.title ?? 'Articolo';
---

<section class="py-8 sm:py-16 lg:py-20 mx-auto">
  <article>
    <header>
      <div class="flex justify-between flex-col sm:flex-row max-w-3xl mx-auto mt-0 mb-2 px-4 sm:px-6 sm:items-center">
        <p>
          <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
          <time datetime={String(post.publishDate)} class="inline-block">
            {getFormattedDate(post.publishDate)}
          </time>
          {post.author && (
            <>
              {' '}· <Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
              <span class="inline-block">{post.author}</span>
            </>
          )}
        </p>
      </div>

      <h1 class="px-4 sm:px-6 max-w-3xl mx-auto text-4xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading">
        {title}
      </h1>

      {post.excerpt && (
        <p class="max-w-3xl mx-auto mt-4 mb-8 px-4 sm:px-6 text-xl md:text-2xl text-muted dark:text-slate-400 text-justify">
          {post.excerpt}
        </p>
      )}

      {(() => {
        // prova a ottenere la src dalla cover del post
        const cand = post?.image?.src ?? null;
        let heroSrc: string | null = null;

        if (typeof cand === 'string') {
          heroSrc = cand;
        } else if (cand && typeof (cand as any).src === 'string') {
          heroSrc = (cand as any).src;
        } else {
          heroSrc = fallbackSrc; // fallback tip-safe
        }

        return heroSrc ? (
          <img
            src={heroSrc}
            alt={post?.image?.alt || post?.title || 'Immagine dell’articolo'}
            width={post?.image?.width || 1024}
            height={post?.image?.height || 1024}
            loading="lazy"
            decoding="async"
            class="max-w-full lg:max-w-[900px] mx-auto mb-6 sm:rounded-md bg-gray-400 dark:bg-slate-700"
          />
        ) : null;
      })()}
    </header>

    <div class="mx-auto px-6 sm:px-6 max-w-3xl prose prose-md lg:prose-xl dark:prose-invert">
      <slot />
    </div>

    <div class="mx-auto px-6 sm:px-6 max-w-3xl mt-8 flex justify-between flex-col sm:flex-row">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
      <SocialShare url={url} text={title} class="mt-5 sm:mt-1 align-middle text-gray-500 dark:text-slate-600" />
    </div>
  </article>
</section>
