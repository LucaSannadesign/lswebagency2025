---
import { Icon } from 'astro-icon/components';
import PostTags from '@/components/blog/Tags.astro';
import SocialShare from '@/components/common/SocialShare.astro';
import { getFormattedDate } from '@/utils/utils';
import type { ImageMetadata } from 'astro';

export interface Props { post: Record<string, any>; url: string | URL; }
const { post, url } = Astro.props as Props;

const title = post?.title ?? 'Articolo';

const toSrc = (v: any): string | undefined => {
  if (!v) return;
  if (typeof v === 'string') return v;                          // /images/...
  if (typeof v === 'object' && 'src' in v) return (v as ImageMetadata).src; // ESM
  if (typeof v === 'object' && 'url' in v) return String((v as any).url);
};

const coverSrc =
  toSrc(post?.image) ?? toSrc(post?.cover) ?? toSrc(post?.hero);

const alt =
  post?.imageAlt ??
  (typeof post?.image === 'object' && post?.image?.alt) ??
  title ?? '';

const width =
  Number(post?.imageWidth) ||
  (typeof post?.image === 'object' && Number(post?.image?.width)) ||
  1200;

const height =
  Number(post?.imageHeight) ||
  (typeof post?.image === 'object' && Number(post?.image?.height)) ||
  675;

const shareUrl = typeof url === 'string' ? url : url?.toString?.() ?? '';
---

<section class="py-8 sm:py-16 lg:py-20 mx-auto">
  <article>
    <header>
      <div class="flex justify-between flex-col sm:flex-row max-w-3xl mx-auto mt-0 mb-2 px-4 sm:px-6 sm:items-center">
        <p>
          <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
          <time datetime={String(post.publishDate)} class="inline-block">
            {getFormattedDate(post.publishDate)}
          </time>
          {post.author && (
            <>
              {' '}Â· <Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
              <span class="inline-block">{post.author}</span>
            </>
          )}
        </p>
      </div>

      <h1 class="px-4 sm:px-6 max-w-3xl mx-auto text-4xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading">
        {title}
      </h1>

      {post.excerpt && (
        <p class="max-w-3xl mx-auto mt-4 mb-8 px-4 sm:px-6 text-xl md:text-2xl text-muted dark:text-slate-400 text-justify">
          {post.excerpt}
        </p>
      )}

      {coverSrc && (
        <img
          src={coverSrc}
          alt={alt}
          width={width}
          height={height}
          loading="eager"
          decoding="async"
          class="max-w-full lg:max-w-[900px] mx-auto mb-6 sm:rounded-md bg-gray-200 dark:bg-slate-800"
        />
      )}
    </header>

    <div class="mx-auto px-6 sm:px-6 max-w-3xl prose prose-md lg:prose-xl dark:prose-invert">
      <slot />
    </div>

    <div class="mx-auto px-6 sm:px-6 max-w-3xl mt-8 flex justify-between flex-col sm:flex-row">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
      <SocialShare url={shareUrl} text={title} class="mt-5 sm:mt-1 align-middle text-gray-500 dark:text-slate-600" />
    </div>
  </article>
</section>