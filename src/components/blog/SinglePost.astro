---
import { Icon } from 'astro-icon/components';
import PostTags from '@/components/blog/Tags.astro';
import SocialShare from '@/components/common/SocialShare.astro';
import PostCTA from '@/components/blog/PostCTA.astro';
import { getFormattedDate } from '@/utils/utils';
import type { ImageMetadata } from 'astro';

export interface Props {
  post: Record<string, any>;
  url: string | URL;
}

const { post, url } = Astro.props;

// Titolo
const title: string = post?.title ?? 'Articolo';

// Normalizzazione cover: accetta string (/public), ImageMetadata, oggetti annidati {src:{src,...}} o {url,...}
let coverSrc: string | null = null;
let coverW: number | undefined;
let coverH: number | undefined;
let coverAlt: string =
  post?.imageAlt ||
  post?.image?.alt ||
  post?.title ||
  'Immagine dell’articolo';

// 1) Stringa (es. "/images/cover.webp")
if (typeof post?.image === 'string') {
  coverSrc = post.image;
}

// 2) Oggetto con .src (ImageMetadata)
if (!coverSrc && post?.image && typeof post.image === 'object' && typeof post.image.src === 'string') {
  coverSrc = (post.image as ImageMetadata).src;
  coverW = (post.image as any).width;
  coverH = (post.image as any).height;
}

// 3) Annidato .src.src
if (!coverSrc && post?.image?.src && typeof post.image.src === 'object' && typeof post.image.src.src === 'string') {
  coverSrc = post.image.src.src;
  coverW = post.image.src.width;
  coverH = post.image.src.height;
}

// 4) Oggetto tipo { url, width, height }
if (!coverSrc && post?.image && typeof post.image.url === 'string') {
  coverSrc = post.image.url;
  coverW = (post.image as any).width;
  coverH = (post.image as any).height;
}

// dimensioni fallback sicure (niente CLS con /public)
if (!coverW) coverW = Number(post?.imageWidth) || 1200;
if (!coverH) coverH = Number(post?.imageHeight) || 675;

// URL per lo share
const shareUrl = typeof url === 'string' ? url : url?.toString?.() ?? '';
---

<section class="py-8 sm:py-16 lg:py-20">
  <article class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
    <!-- meta (data / autore) -->
    <div class="flex justify-between flex-col sm:flex-row sm:items-center mt-0 mb-4">
      <p class="text-sm text-slate-600 dark:text-slate-400">
        <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
        <time datetime={String(post.publishDate)} class="inline-block">
          {getFormattedDate(post.publishDate)}
        </time>
        {post.author && (
          <>
            {' '}· <Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
            <span class="inline-block">{post.author}</span>
          </>
        )}
      </p>
    </div>

    <!-- H1 -->
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold leading-tight tracking-tight font-heading text-slate-900 dark:text-white mt-4">
      {title}
    </h1>

    <!-- Excerpt opzionale -->
    {post.excerpt && (
      <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-400 leading-relaxed mt-6 mb-0">
        {post.excerpt}
      </p>
    )}

    <!-- Unica cover (solo se presente) -->
    {coverSrc && (
      <div class="mt-10 overflow-hidden rounded-2xl shadow-md">
        <img
          src={coverSrc}
          alt={coverAlt}
          width={coverW}
          height={coverH}
          loading="eager"
          decoding="async"
          class="w-full h-auto"
        />
      </div>
    )}

    <!-- Contenuto -->
    <div class="prose prose-slate prose-lg lg:prose-xl dark:prose-invert max-w-none mt-12 prose-headings:font-bold prose-headings:text-slate-900 dark:prose-headings:text-white prose-p:leading-relaxed prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-strong:text-slate-900 dark:prose-strong:text-white">
      <slot />
    </div>

    <!-- CTA -->
    <PostCTA />

    <!-- Tag + share -->
    <div class="mt-12 pt-8 border-t border-slate-200 dark:border-slate-800 flex justify-between flex-col sm:flex-row gap-4">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
      <SocialShare url={shareUrl} text={title} class="sm:mt-0 align-middle text-gray-500 dark:text-slate-600" />
    </div>
  </article>
</section>