---
import Layout from '@/layouts/PageLayout.astro';

const metadata = {
  title: 'Pagina non trovata (404)',
  description: 'La pagina richiesta non esiste o è stata spostata.',
  canonical: '/404',
  robots: { index: false, follow: true },
};
---

<Layout metadata={metadata}>
  <section class="min-h-[60vh] flex items-center justify-center px-6 text-center">
    <div>
      <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight">Ops! Pagina non trovata</h1>
      <p class="mt-3 text-neutral-600 dark:text-neutral-300">
        La pagina potrebbe essere stata rimossa o l’URL è stato digitato male.
      </p>
      <div class="mt-6 flex gap-3 justify-center">
        <a href="/" class="inline-flex items-center justify-center rounded-full px-5 py-3 bg-black text-white hover:opacity-90 transition">
          Torna alla Home
        </a>
        <a href="/contatti" class="inline-flex items-center justify-center rounded-full px-5 py-3 border border-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800">
          Contattaci
        </a>
      </div>
    </div>
  </section>
</Layout>