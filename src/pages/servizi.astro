---
import CallToAction from '@/components/widgets/CallToAction.astro';
import Features2 from '@/components/widgets/Features2.astro';
import Hero from '@/components/widgets/Hero.astro';
import Layout from '@/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

// ✅ immagine esistente importata come ESM (evita MissingImageDimension)
import servicesHero from '@/assets/images/servizi-seo-grafica-branding-siti-web.webp';

const metadata = {
  title: 'Servizi Web, SEO e Marketing | LS Web Agency',
  description:
    'Siti web performanti, SEO (anche locale) e marketing digitale. Nuovi servizi: Local SEO Booster, Accessibilità avanzata, UX con AI e Web Design Etico.',
  canonical: '/servizi',
  ignoreTitleTemplate: true,
  openGraph: {
    url: '/servizi',
    images: [{ url: servicesHero.src, width: servicesHero.width, height: servicesHero.height }],
    type: 'website',
  },
  twitter: {
    cardType: 'summary_large_image',
  },
};

// URL utili
const SEO_BOOSTER_URL = '/servizi/seo-locale';
const PAGAMENTI_URL = '/pagamenti';

// ✅ Landing “pacchetto rapido”
const CONTATTI_RAPIDI_URL = '/lp/contatti-rapidi';
const CONTATTI_RAPIDI_CTA = '/contatti?servizio=contatti-rapidi&azione=call';
---

<Layout metadata={metadata}>
  <!-- HERO + bg gradient: più tenue e più basso -->
  <section class="relative isolate">
    <div
      aria-hidden="true"
      class="pointer-events-none absolute inset-x-0 top-0 -z-10 h-[340px] sm:h-[400px] md:h-[440px]"
    >
      <div
        class="h-full bg-gradient-to-b from-violet-600/10 via-fuchsia-500/8 to-white
               dark:from-violet-500/20 dark:via-fuchsia-400/10 dark:to-neutral-950"
      />
    </div>

    <Hero
      actions={[
        { variant: 'primary', text: 'Parla con Luca', href: '/contatti' },
        { text: 'Scopri i servizi', href: '#servizi' },
      ]}
      image={{
        src: servicesHero.src,
        alt: 'Servizi web, SEO e marketing digitale',
        width: servicesHero.width,
        height: servicesHero.height,
      }}
    >
      <span slot="title">
        <span>Strategie digitali su misura: </span>
        <span class="text-accent text-gradient dark:text-white highlight">Siti Web</span>,
        <span class="text-accent text-gradient dark:text-white highlight">SEO</span> &
        <span class="text-accent text-gradient dark:text-white highlight">Marketing</span>
      </span>

      <span slot="subtitle">
        Realizziamo siti veloci e sicuri, posizioniamo il tuo brand su Google (anche nel
        <strong>Local Pack</strong>) e attiviamo campagne che convertono.
        Novità: <strong>Local SEO Booster</strong>, <strong>Accessibilità Digitale</strong>,
        <strong>UX con AI</strong> e <strong>Web Design Etico</strong>.
      </span>
    </Hero>
  </section>

  <!-- SITI WEB -->
  <section id="siti-web" class="container mx-auto max-w-7xl px-6 md:px-8 py-10">
    <div class="mb-8">
      <h2 class="text-2xl md:text-3xl font-bold mb-2">Siti Web</h2>
      <p class="text-neutral-600 dark:text-neutral-300">
        Progetto e ottimizzo siti e landing focalizzati su contatti e richieste, con UX pulita, microcopy efficace e struttura misurabile.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">Creazione Siti Web</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Siti moderni, veloci, orientati alla conversione.
        </p>
        <a href="/servizi/creazione-siti-web-sassari" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">E-commerce</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          WooCommerce o headless, checkout ottimizzati.
        </p>
        <a href="/servizi/realizzazione-siti-ecommerce" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">Landing Page</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Pagina che converte: UX, copy, CTA, performance.
        </p>
        <a href="/servizi/landing-page-professionale" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">WordPress Slim</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Statici/headless: veloci, sicuri, SEO-ready.
        </p>
        <a href="/servizi/wordpress-slim-siti-statici-headless" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>
    </div>
  </section>

  <!-- SEO -->
  <section id="seo" class="container mx-auto max-w-7xl px-6 md:px-8 py-10">
    <div class="mb-8">
      <h2 class="text-2xl md:text-3xl font-bold mb-2">SEO (Tecnica + Locale)</h2>
      <p class="text-neutral-600 dark:text-neutral-300">
        SEO tecnica e SEO locale per essere trovati nel modo giusto: struttura, performance, indicizzazione e presenza local misurata.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">Ottimizzazione SEO</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Analisi tecnica, contenuti e link building.
        </p>
        <a href="/servizi/ottimizzazione-seo-siti-web" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">SEO Locale</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Hub SEO locale: approccio e priorità.
        </p>
        <a href="/servizi/seo-locale" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">Local SEO Booster</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Pacchetto operativo per risultati locali misurabili.
        </p>
        <a href="/servizi/local-seo-booster" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">Audit Rapido</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Diagnosi operativa: baseline, priorità e next step.
        </p>
        <a href="/servizi/audit-rapido" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>
    </div>
  </section>

  <!-- AI & AUTOMAZIONI -->
  <section id="ai" class="container mx-auto max-w-7xl px-6 md:px-8 py-10">
    <div class="mb-8">
      <h2 class="text-2xl md:text-3xl font-bold mb-2">AI & Automazioni</h2>
      <p class="text-neutral-600 dark:text-neutral-300">
        Assistenti e automazioni leggere per ridurre tempo sprecato e migliorare la gestione dei contatti, senza complicare lo stack.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">Assistente AI</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          FAQ 24/7, prenotazioni, lead qualificati.
        </p>
        <a href="/servizi/assistente-ai-sito-whatsapp" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">UX con AI</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Esperienze personalizzate e dinamiche.
        </p>
        <a href="/servizi/personalizzazione-ux-intelligenza-artificiale" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">AI Blog Engine</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Contenuti blog generati e ottimizzati con AI.
        </p>
        <a href="/servizi/ai-blog-engine" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>
    </div>
  </section>


  <!-- PACCHETTI RAPIDI (entry point) -->
  <section class="container mx-auto max-w-7xl px-6 md:px-8 py-10">
    <div class="mb-8">
      <h2 class="text-2xl md:text-3xl font-bold mb-2">Pacchetti rapidi (entry point)</h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm">
        <h3 class="font-semibold text-lg mb-2">Audit Rapido (48h)</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Diagnosi operativa: baseline, priorità e next step.
        </p>
        <a href="/servizi/audit-rapido" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm">
        <h3 class="font-semibold text-lg mb-2">Fix Performance & SEO</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Intervento mirato quando le priorità sono già chiare.
        </p>
        <a href="/servizi/fix-performance-seo" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm">
        <h3 class="font-semibold text-lg mb-2">Local SEO Booster</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Pacchetto operativo per risultati locali misurabili (GBP + local pack + tracking).
        </p>
        <a href="/servizi/local-seo-booster" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>

      <article class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition">
        <h3 class="font-semibold text-lg mb-2">Sprint di Ottimizzazione</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4">
          Audit + fix + misurazione in un percorso breve. È il metodo 'ombrello' che mette ordine.
        </p>
        <a href="/servizi/sprint-ottimizzazione" class="inline-flex items-center text-sm font-semibold text-indigo-700 hover:text-indigo-800 dark:text-indigo-300">
          Scopri di più →
        </a>
      </article>
    </div>
  </section>

  <!-- TUTTI I SERVIZI -->
  <section id="tutti-servizi" class="container mx-auto max-w-7xl px-6 md:px-8 py-10">
    <div class="mb-8">
      <h2 class="text-2xl md:text-3xl font-bold mb-2">Tutti i servizi</h2>
      <p class="text-neutral-600 dark:text-neutral-300 mb-4">
        Strategie e realizzazioni per aumentare visibilità, lead e vendite.
      </p>
      <p class="text-sm text-neutral-500 dark:text-neutral-400">
        Se non sai da dove partire, scegli un pacchetto rapido: riduce ambiguità e accelera le decisioni.
      </p>
    </div>
  </section>
  <Features2
    id="tutti-servizi-grid"
    title=""
    subtitle="Strategie e realizzazioni per aumentare visibilità, lead e vendite."
    columns={4}
    classes={{
      container:
        'max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5 md:gap-6 xl:gap-8 px-6 md:px-8',
      panel:
        'h-full rounded-2xl p-5 md:p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 shadow-sm hover:shadow-md transition hover:-translate-y-0.5',
      title: 'mt-1 font-semibold text-lg',
      description: 'mt-1 text-neutral-600 dark:text-neutral-300 text-sm leading-relaxed',
      icon: 'text-2xl mb-2 opacity-80',
    }}
    items={[
      { title: 'Creazione siti web', description: 'Siti moderni, veloci, orientati alla conversione.', icon: 'tabler:device-desktop', href: '/servizi/creazione-siti-web-sassari' },
      { title: 'Realizzazione E-commerce', description: 'WooCommerce o headless, checkout ottimizzati.', icon: 'tabler:shopping-cart', href: '/servizi/realizzazione-siti-ecommerce' },
      { title: 'Landing Page', description: 'Pagina che converte: UX, copy, CTA, performance.', icon: 'tabler:layout', href: '/servizi/landing-page-professionale' },
      { title: 'WordPress Slim', description: 'Statici/headless: veloci, sicuri, SEO-ready.', icon: 'tabler:rocket', href: '/servizi/wordpress-slim-siti-statici-headless' },
      { title: 'Siti Web', description: 'Hub servizi siti web.', icon: 'tabler:device-desktop', href: '/servizi/siti-web' },
      
      { title: 'Ottimizzazione SEO', description: 'Analisi tecnica, contenuti e link building.', icon: 'tabler:chart-line', href: '/servizi/ottimizzazione-seo-siti-web' },
      { title: 'SEO Locale', description: 'Hub SEO locale: approccio e priorità.', icon: 'tabler:map-pin', href: '/servizi/seo-locale' },
      { title: 'Local SEO Booster', description: 'Pacchetto operativo per risultati locali misurabili.', icon: 'tabler:map-pin', href: '/servizi/local-seo-booster' },
      { title: 'Audit Rapido', description: 'Diagnosi operativa: baseline, priorità e next step.', icon: 'tabler:search', href: '/servizi/audit-rapido' },
      { title: 'Fix Performance & SEO', description: 'Intervento mirato quando le priorità sono già chiare.', icon: 'tabler:tool', href: '/servizi/fix-performance-seo' },
      { title: 'Sprint di Ottimizzazione', description: 'Audit + fix + misurazione in un percorso breve.', icon: 'tabler:rocket', href: '/servizi/sprint-ottimizzazione' },
      
      { title: 'Assistente AI (Sito & WhatsApp)', description: 'FAQ 24/7, prenotazioni, lead qualificati.', icon: 'tabler:message-chatbot', href: '/servizi/assistente-ai-sito-whatsapp' },
      { title: 'UX con Intelligenza Artificiale', description: 'Esperienze personalizzate e dinamiche.', icon: 'tabler:brain', href: '/servizi/personalizzazione-ux-intelligenza-artificiale' },
      { title: 'AI Blog Engine', description: 'Contenuti blog generati e ottimizzati con AI.', icon: 'tabler:article', href: '/servizi/ai-blog-engine' },
      
      { title: 'Branding e Grafica', description: 'Identità visiva, UI e materiali promozionali.', icon: 'tabler:palette', href: '/servizi/branding-e-grafica-siti-web' },
      { title: 'Accessibilità Digitale', description: 'Adeguamenti WCAG/AgID e remediation.', icon: 'tabler:wheelchair', href: '/servizi/accessibilita-digitale-avanzata' },
      { title: 'Web Design Etico & Sostenibile', description: 'Performance, privacy e leggerezza.', icon: 'tabler:leaf', href: '/servizi/web-design-etico-sostenibile' },
      { title: 'Assistenza e Manutenzione', description: 'Supporto continuativo e aggiornamenti.', icon: 'tabler:settings', href: '/servizi/assistenza-manutenzione' },
    ]}
  />

  <!-- PACCHETTI RAPIDI (conversione) -->
  <section class="container mx-auto max-w-7xl px-6 md:px-8 py-10">
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4 mb-6">
      <div>
        <h2 class="text-2xl md:text-3xl font-bold">Pacchetti rapidi</h2>
        <p class="text-neutral-600 dark:text-neutral-300">
          Soluzioni snelle per uscire dall’urgenza: una pagina, un obiettivo, più richieste.
        </p>
      </div>

      <div class="flex gap-2">
        <a
          href={CONTATTI_RAPIDI_URL}
          class="inline-flex items-center justify-center rounded-full px-5 py-3 font-semibold ring-1 ring-neutral-200 bg-white/70 hover:bg-white dark:bg-neutral-900/40 dark:ring-neutral-800 dark:hover:bg-neutral-900/60"
        >
          Vedi la landing
