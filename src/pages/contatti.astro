---
import Layout from '@/layouts/PageLayout.astro';
import Button from '@/components/ui/Button.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Contatti | LS Web Agency Sassari',
  description:
    'Parla con LS Web Agency: consulenza per siti web, e-commerce, SEO e marketing digitale a Sassari. Telefono, WhatsApp, Telegram ed email.',
  canonical: '/contatti',
  openGraph: {
    url: '/contatti',
    type: 'website',
  },
  twitter: {
    cardType: 'summary',
  },
};

const AGENCY = {
  name: 'LS Web Agency',
  person: 'Luca Sanna',
  street: 'Via Alcide De Gasperi, 3',
  city: 'Sassari',
  region: 'Sardegna',
  postal: '07100',
  country: 'IT',
  phoneIntl: '+39 3403223494',
  phoneHuman: '340 322 3494',
  email: 'info@lswebagency.com',
  site: 'https://www.lswebagency.com',
  sameAs: [
    'https://www.facebook.com/lswebagency',
    'https://www.linkedin.com/company/lswebagency',
    'https://t.me/lswebagency',
    'https://wa.me/393403223494',
  ],
};
---

<Layout metadata={metadata}>
  <!-- HERO / INTRO -->
  <section class="relative overflow-hidden isolate">
    <div
      aria-hidden="true"
      class="pointer-events-none absolute inset-x-0 top-0 -z-10 h-[360px] bg-gradient-to-b
             from-violet-100/80 via-white to-transparent
             dark:from-violet-900/40 dark:via-transparent">
    </div>

    <div class="container mx-auto px-6 pt-14 md:pt-16 pb-8">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h1 class="text-3xl md:text-5xl font-extrabold leading-tight">
            <span class="bg-clip-text text-transparent bg-gradient-to-r
                         from-violet-700 via-fuchsia-500 to-pink-500
                         dark:from-violet-400 dark:via-fuchsia-400 dark:to-pink-300">
              Contattaci
            </span>
          </h1>
          <p class="mt-3 text-base md:text-lg text-neutral-700 dark:text-neutral-300 max-w-prose">
            Siamo a Sassari e lavoriamo in tutta la Sardegna e in Italia. Parla con noi per siti web,
            e-commerce, SEO e marketing digitale.
          </p>

          <div class="mt-5 flex flex-wrap gap-3">
            <a href="#contact" class="inline-flex items-center justify-center min-h-[44px] rounded-full px-6 py-3 text-base font-semibold text-white bg-violet-600 hover:bg-violet-700 transition">
              Invia una richiesta
            </a>
            <a href="/servizi" class="inline-flex items-center justify-center min-h-[44px] rounded-full px-6 py-3 text-base font-semibold ring-1 ring-neutral-300 text-neutral-900 hover:bg-neutral-100 dark:text-neutral-100 dark:ring-neutral-700 dark:hover:bg-neutral-800 transition">
              Vedi i servizi
            </a>
          </div>
        </div>

        <!-- Contatti rapidi -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <a href={`tel:${AGENCY.phoneIntl}`} class="group rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 hover:shadow-sm transition">
            <div class="flex items-center gap-3">
              <Icon name="tabler:phone" class="text-2xl opacity-80" aria-hidden="true" />
              <div>
                <div class="text-sm text-neutral-500">Telefono</div>
                <div class="font-semibold">{AGENCY.phoneHuman}</div>
              </div>
            </div>
          </a>

          <a href="https://wa.me/393403223494" target="_blank" rel="noopener nofollow"
             class="group rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 hover:shadow-sm transition">
            <div class="flex items-center gap-3">
              <Icon name="tabler:brand-whatsapp" class="text-2xl opacity-80" aria-hidden="true" />
              <div>
                <div class="text-sm text-neutral-500">WhatsApp</div>
                <div class="font-semibold">Scrivici ora</div>
              </div>
            </div>
          </a>

          <a href="https://t.me/lswebagency" target="_blank" rel="noopener nofollow"
             class="group rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 hover:shadow-sm transition">
            <div class="flex items-center gap-3">
              <Icon name="tabler:brand-telegram" class="text-2xl opacity-80" aria-hidden="true" />
              <div>
                <div class="text-sm text-neutral-500">Telegram</div>
                <div class="font-semibold">Messaggia su Telegram</div>
              </div>
            </div>
          </a>

          <a href={`mailto:${AGENCY.email}`} class="group rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 hover:shadow-sm transition">
            <div class="flex items-center gap-3">
              <Icon name="tabler:mail" class="text-2xl opacity-80" aria-hidden="true" />
              <div>
                <div class="text-sm text-neutral-500">Email</div>
                <div class="font-semibold">{AGENCY.email}</div>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FORM CONTATTI -->
  <section id="contact" class="scroll-mt-24 container mx-auto px-6 py-10">
    <div class="max-w-4xl mx-auto rounded-3xl ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50 p-6 md:p-8">
      <h2 class="text-2xl md:text-3xl font-bold mb-1">Richiedi una consulenza</h2>
      <p class="text-neutral-600 dark:text-neutral-300 mb-6">Ti rispondiamo entro 24h lavorative.</p>

      <!-- Messaggi di feedback -->
      <div id="form-feedback" class="hidden mb-6 rounded-xl p-4 border" role="alert">
        <div id="form-feedback-content" class="flex items-center gap-3">
          <span id="form-feedback-icon"></span>
          <span id="form-feedback-text"></span>
        </div>
      </div>

      <form
        id="contact-form"
        method="POST"
        action="/api/contatti"
        class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full"
        novalidate
      >
        <!-- Honeypot anti-spam -->
        <input
          type="text"
          name="company"
          tabindex="-1"
          autocomplete="off"
          class="hidden"
          aria-hidden="true"
        />

        <div class="col-span-1 min-w-0">
          <label for="name" class="block text-sm font-medium mb-1">
            Nome e cognome <span class="text-red-500">*</span>
          </label>
          <input
            id="name"
            name="name"
            type="text"
            required
            minlength="2"
            class="w-full min-w-0 rounded-xl border border-neutral-300 dark:border-neutral-700 bg-white dark:bg-neutral-900 px-3 py-2.5 text-base focus:outline-none focus:ring-2 focus:ring-violet-500 invalid:border-red-500"
            aria-describedby="name-error"
          />
          <span id="name-error" class="hidden text-sm text-red-600 dark:text-red-400 mt-1" role="alert"></span>
        </div>

        <div class="col-span-1 min-w-0">
          <label for="email" class="block text-sm font-medium mb-1">
            Email <span class="text-red-500">*</span>
          </label>
          <input
            id="email"
            name="email"
            type="email"
            required
            inputmode="email"
            autocomplete="email"
            class="w-full min-w-0 rounded-xl border border-neutral-300 dark:border-neutral-700 bg-white dark:bg-neutral-900 px-3 py-2.5 text-base focus:outline-none focus:ring-2 focus:ring-violet-500 invalid:border-red-500"
            aria-describedby="email-error"
          />
          <span id="email-error" class="hidden text-sm text-red-600 dark:text-red-400 mt-1" role="alert"></span>
        </div>

        <div class="col-span-1 min-w-0">
          <label for="phone" class="block text-sm font-medium mb-1">
            Telefono (opzionale)
          </label>
          <input
            id="phone"
            name="phone"
            type="tel"
            inputmode="tel"
            autocomplete="tel"
            class="w-full min-w-0 rounded-xl border border-neutral-300 dark:border-neutral-700 bg-white dark:bg-neutral-900 px-3 py-2.5 text-base focus:outline-none focus:ring-2 focus:ring-violet-500"
          />
        </div>

        <div class="col-span-1 min-w-0">
          <label for="service" class="block text-sm font-medium mb-1">
            Servizio di interesse
          </label>
          <select
            id="service"
            name="service"
            class="w-full min-w-0 rounded-xl border border-neutral-300 dark:border-neutral-700 bg-white dark:bg-neutral-900 px-3 py-2.5 text-base focus:outline-none focus:ring-2 focus:ring-violet-500"
          >
            <option value="" selected>Seleziona…</option>
            <option value="siti-web">Siti Web Professionali</option>
            <option value="seo-locale">SEO Locale</option>
            <option value="assistenza">Assistenza & Manutenzione</option>
            <option value="ecommerce">E-commerce</option>
            <option value="seo">SEO / Local SEO</option>
            <option value="branding">Branding &amp; grafica</option>
            <option value="ai">AI / Assistenti</option>
            <option value="altro">Altro</option>
          </select>
        </div>

        <div class="col-span-1 md:col-span-2 min-w-0">
          <label for="message" class="block text-sm font-medium mb-1">
            Messaggio <span class="text-red-500">*</span>
          </label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            minlength="10"
            class="w-full min-w-0 rounded-xl border border-neutral-300 dark:border-neutral-700 bg-white dark:bg-neutral-900 px-3 py-2.5 text-base focus:outline-none focus:ring-2 focus:ring-violet-500 invalid:border-red-500 resize-y"
            aria-describedby="message-error"
          ></textarea>
          <span id="message-error" class="hidden text-sm text-red-600 dark:text-red-400 mt-1" role="alert"></span>
        </div>

        <!-- BLOCCO PRIVACY -->
        <div class="col-span-1 md:col-span-2">
          <label
            for="privacy"
            class="flex items-center gap-3 rounded-2xl ring-1 ring-neutral-200 dark:ring-neutral-800
                   bg-gradient-to-r from-violet-50/60 to-white dark:from-violet-950/20
                   p-4 cursor-pointer"
          >
            <Icon
              name="tabler:shield-check"
              class="text-xl text-violet-600 shrink-0"
              aria-hidden="true"
            />
            <input
              id="privacy"
              name="privacy"
              type="checkbox"
              required
              class="size-5 rounded-md accent-violet-600 shadow-sm
                     focus:outline-none focus:ring-2 focus:ring-violet-500"
              aria-describedby="privacy-error"
            />
            <span class="text-sm">
              Ho letto e accetto la
              <a
                href="/privacy"
                class="font-medium underline decoration-2 underline-offset-2 decoration-violet-500 hover:decoration-violet-600"
                target="_blank"
              >
                Privacy Policy
              </a>.
              <span class="text-red-500">*</span>
            </span>
          </label>
          <span id="privacy-error" class="hidden text-sm text-red-600 dark:text-red-400 mt-1 ml-12" role="alert"></span>
        </div>

        <div class="col-span-1 md:col-span-2 mt-2">
          <Button type="submit" variant="primary" id="submit-btn" class="w-full sm:w-auto min-h-[44px]">
            <span id="submit-text">Invia richiesta</span>
            <span id="submit-loading" class="hidden">
              Invio in corso...
            </span>
          </Button>
        </div>
      </form>
    </div>
  </section>

  <!-- DOVE SIAMO -->
  <section class="container mx-auto px-6 pb-14">
    <div class="grid md:grid-cols-2 gap-6 items-start">
      <div class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50">
        <h3 class="text-xl font-semibold">Dove siamo</h3>
        <address class="not-italic mt-2 text-neutral-700 dark:text-neutral-300">
          <strong>{AGENCY.name}</strong><br />
          di {AGENCY.person}<br />
          {AGENCY.street}<br />
          {AGENCY.postal} {AGENCY.city}, {AGENCY.region}, Italia
        </address>

        <ul class="mt-4 space-y-2 text-neutral-700 dark:text-neutral-300">
          <li>
            <strong>Tel:</strong>{' '}
            <a
              href={`tel:${AGENCY.phoneIntl}`}
              class="underline decoration-violet-500 underline-offset-2"
            >
              {AGENCY.phoneHuman}
            </a>
          </li>
          <li>
            <strong>Email:</strong>{' '}
            <a
              href={`mailto:${AGENCY.email}`}
              class="underline decoration-violet-500 underline-offset-2"
            >
              {AGENCY.email}
            </a>
          </li>
          <li>
            <strong>Orari:</strong> Lun–Ven 9:30–18:30
          </li>
        </ul>

        <div class="mt-4 flex gap-3">
          <a
            href="https://wa.me/393403223494"
            target="_blank"
            rel="noopener nofollow"
            class="inline-flex items-center gap-2 rounded-full px-4 py-2 bg-emerald-600 text-white hover:bg-emerald-700 transition"
          >
            <Icon name="tabler:brand-whatsapp" class="text-xl" /> WhatsApp
          </a>
          <a
            href="https://t.me/lswebagency"
            target="_blank"
            rel="noopener nofollow"
            class="inline-flex items-center gap-2 rounded-full px-4 py-2 bg-sky-600 text-white hover:bg-sky-700 transition"
          >
            <Icon name="tabler:brand-telegram" class="text-xl" /> Telegram
          </a>
        </div>
      </div>

      <div class="rounded-2xl ring-1 ring-neutral-200 dark:ring-neutral-800 overflow-hidden bg-white/60 dark:bg-neutral-900/50">
        <div class="rounded-2xl overflow-hidden ring-1 ring-neutral-200 dark:ring-neutral-800">
          <iframe
            src="https://maps.google.com/maps?hl=it&q=LS%20Web%20Agency%20di%20Luca%20Sanna%2C%20Via%20Alcide%20De%20Gasperi%203%2C%2007100%20Sassari&ie=UTF8&t=m&z=16&iwloc=B&output=embed"
            class="w-full aspect-[16/9] min-h-[320px] md:min-h-[420px]"
            style="border:0"
            loading="lazy"
            allowfullscreen
            referrerpolicy="no-referrer-when-downgrade"
            title="Mappa — LS Web Agency, Sassari"
          >
          </iframe>
        </div>

        <p class="mt-2 text-sm">
          <a
            href="https://www.google.com/maps/search/?api=1&query=LS%20Web%20Agency%20di%20Luca%20Sanna%2C%20Via%20Alcide%20De%20Gasperi%203%2C%2007100%20Sassari"
            target="_blank"
            rel="noopener"
            class="underline"
          >
            Apri su Google Maps
          </a>
        </p>
      </div>
    </div>
  </section>

  <!-- JSON-LD LocalBusiness -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'ProfessionalService',
      name: AGENCY.name,
      url: AGENCY.site,
      email: AGENCY.email,
      telephone: AGENCY.phoneIntl,
      image: `${AGENCY.site}/images/logo-ls-webdesignagency-2025.svg`,
      address: {
        '@type': 'PostalAddress',
        streetAddress: AGENCY.street,
        addressLocality: AGENCY.city,
        addressRegion: AGENCY.region,
        postalCode: AGENCY.postal,
        addressCountry: 'IT',
      },
      areaServed: ['Sassari', 'Sardegna', 'Italia'],
      sameAs: AGENCY.sameAs,
    })}
  />

  <!-- Form handling script -->
  <script is:inline>
    (function() {
      const form = document.getElementById('contact-form');
      const submitBtn = document.getElementById('submit-btn');
      const submitText = document.getElementById('submit-text');
      const submitLoading = document.getElementById('submit-loading');
      const feedback = document.getElementById('form-feedback');
      const feedbackContent = document.getElementById('form-feedback-content');
      const feedbackText = document.getElementById('form-feedback-text');

      if (!form || !submitBtn) return;

      // Reset feedback
      function resetFeedback() {
        feedback?.classList.add('hidden');
        feedback?.classList.remove('bg-emerald-50', 'border-emerald-200', 'text-emerald-800', 'dark:bg-emerald-900/20', 'dark:border-emerald-800', 'dark:text-emerald-200');
        feedback?.classList.remove('bg-red-50', 'border-red-200', 'text-red-800', 'dark:bg-red-900/20', 'dark:border-red-800', 'dark:text-red-200');
      }

      // Show error
      function showError(message) {
        if (!feedback || !feedbackText) return;
        feedback.classList.remove('hidden');
        feedback.classList.remove('bg-emerald-50', 'border-emerald-200', 'text-emerald-800');
        feedback.classList.add('bg-red-50', 'border-red-200', 'text-red-800', 'dark:bg-red-900/20', 'dark:border-red-800', 'dark:text-red-200');
        feedbackText.textContent = message;
        const iconEl = document.getElementById('form-feedback-icon');
        if (iconEl) {
          iconEl.innerHTML = '<svg class="w-5 h-5 shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/></svg>';
        }
        feedback.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }

      // Show success
      function showSuccess(message) {
        if (!feedback || !feedbackText) return;
        feedback.classList.remove('hidden');
        feedback.classList.remove('bg-red-50', 'border-red-200', 'text-red-800');
        feedback.classList.add('bg-emerald-50', 'border-emerald-200', 'text-emerald-800', 'dark:bg-emerald-900/20', 'dark:border-emerald-800', 'dark:text-emerald-200');
        feedbackText.textContent = message;
        feedbackContent.innerHTML = '<svg class="w-5 h-5 shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg><span>' + message + '</span>';
        feedback.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }

      // Clear field errors
      function clearFieldErrors() {
        document.querySelectorAll('[id$="-error"]').forEach(el => {
          el.classList.add('hidden');
          el.textContent = '';
        });
        document.querySelectorAll('input, textarea, select').forEach(el => {
          el.classList.remove('border-red-500');
        });
      }

      // Validate field
      function validateField(field) {
        const errorId = field.id + '-error';
        const errorEl = document.getElementById(errorId);
        
        if (!field.checkValidity()) {
          field.classList.add('border-red-500');
          if (errorEl) {
            errorEl.classList.remove('hidden');
            if (field.validity.valueMissing) {
              errorEl.textContent = 'Campo obbligatorio';
            } else if (field.validity.tooShort) {
              errorEl.textContent = field.id === 'message' ? 'Il messaggio deve contenere almeno 10 caratteri' : 'Troppo corto';
            } else if (field.validity.typeMismatch) {
              errorEl.textContent = 'Email non valida';
            } else {
              errorEl.textContent = 'Valore non valido';
            }
          }
          return false;
        } else {
          field.classList.remove('border-red-500');
          if (errorEl) {
            errorEl.classList.add('hidden');
          }
          return true;
        }
      }

      // Validate form
      function validateForm() {
        clearFieldErrors();
        const name = document.getElementById('name');
        const email = document.getElementById('email');
        const message = document.getElementById('message');
        const privacy = document.getElementById('privacy');

        let isValid = true;
        if (name && !validateField(name)) isValid = false;
        if (email && !validateField(email)) isValid = false;
        if (message && !validateField(message)) isValid = false;
        if (privacy && !privacy.checked) {
          isValid = false;
          const errorEl = document.getElementById('privacy-error');
          if (errorEl) {
            errorEl.classList.remove('hidden');
            errorEl.textContent = 'Devi accettare la privacy policy';
          }
        }

        return isValid;
      }

      // Set loading state
      function setLoading(loading) {
        if (submitBtn) {
          submitBtn.disabled = loading;
          if (loading) {
            submitBtn.classList.add('opacity-75', 'cursor-not-allowed');
            submitText?.classList.add('hidden');
            submitLoading?.classList.remove('hidden');
          } else {
            submitBtn.classList.remove('opacity-75', 'cursor-not-allowed');
            submitText?.classList.remove('hidden');
            submitLoading?.classList.add('hidden');
          }
        }
      }

      // Flag per evitare doppio invio
      let isSubmitting = false;

      // Form submit - sempre usa fetch JSON, disabilita submit classico
      form.addEventListener('submit', async (e) => {
        // Previeni SEMPRE submit classico (evita "Cross-site POST form submissions are forbidden" su Vercel)
        e.preventDefault();
        e.stopPropagation();
        
        // Evita doppio invio
        if (isSubmitting) {
          return;
        }

        resetFeedback();
        clearFieldErrors();

        if (!validateForm()) {
          showError('Compila correttamente tutti i campi obbligatori.');
          return;
        }

        isSubmitting = true;
        setLoading(true);

        try {
          // Prepara dati JSON dal form
          const formData = new FormData(form);
          const data = {
            name: formData.get('name') || '',
            email: formData.get('email') || '',
            phone: formData.get('phone') || '',
            service: formData.get('service') || '',
            message: formData.get('message') || '',
            privacy: formData.get('privacy') === 'on',
            company: formData.get('company') || '', // honeypot
          };
          
          // Log diagnostico (solo in dev)
          if (typeof window !== 'undefined' && window.location.hostname === 'localhost') {
            console.log('[form] Invio dati:', { 
              name: data.name.substring(0, 10) + '...', 
              email: data.email.substring(0, 10) + '...',
              privacy: data.privacy 
            });
          }
          
          // Fetch con timeout implicito (browser gestisce)
          const response = await fetch('/api/contatti', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          }).catch((networkError) => {
            // Gestione errori di rete (offline, CORS, timeout, etc)
            if (typeof window !== 'undefined' && window.location.hostname === 'localhost') {
              console.error('[form] Network error:', networkError);
            }
            throw new Error('Impossibile connettersi al server. Verifica la connessione e riprova.');
          });

          // L'API restituisce sempre JSON
          let responseData;
          try {
            responseData = await response.json();
          } catch (jsonError) {
            if (typeof window !== 'undefined' && window.location.hostname === 'localhost') {
              console.error('[form] JSON parse error:', jsonError, 'Status:', response.status);
            }
            throw new Error('Risposta del server non valida. Riprova più tardi.');
          }

          // Log diagnostico (solo in dev)
          if (typeof window !== 'undefined' && window.location.hostname === 'localhost') {
            console.log('[form] Risposta API:', { status: response.status, ok: responseData?.ok });
          }

          // Verifica status HTTP
          if (!response.ok) {
            const errorMessage = responseData?.message || `Errore ${response.status}. Riprova più tardi.`;
            if (typeof window !== 'undefined' && window.location.hostname === 'localhost') {
              console.error('[form] API error:', { status: response.status, data: responseData });
            }
            throw new Error(errorMessage);
          }

          // Verifica struttura risposta
          if (!responseData || typeof responseData !== 'object') {
            if (typeof window !== 'undefined' && window.location.hostname === 'localhost') {
              console.error('[form] Invalid response data:', responseData);
            }
            throw new Error('Risposta del server non valida.');
          }

          // Verifica che la risposta sia di successo
          if (responseData.ok === false) {
            throw new Error(responseData.message || 'Errore durante l\'invio');
          }

          // Successo
          const successMessage = responseData.message || 'Messaggio inviato con successo! Ti risponderemo il prima possibile.';
          showSuccess(successMessage);
          form.reset();
          
          // Redirect dopo 2 secondi
          setTimeout(() => {
            window.location.href = '/grazie';
          }, 2000);

        } catch (error) {
          if (typeof window !== 'undefined' && window.location.hostname === 'localhost') {
            console.error('[form] Error:', error);
          }
          // Messaggio utente sempre chiaro e non tecnico
          const errorMessage = error instanceof Error ? error.message : 'Errore durante l\'invio. Riprova più tardi.';
          showError(errorMessage);
        } finally {
          isSubmitting = false;
          setLoading(false);
        }
      });

      // Real-time validation on blur
      ['name', 'email', 'message'].forEach(id => {
        const field = document.getElementById(id);
        if (field) {
          field.addEventListener('blur', () => validateField(field));
          field.addEventListener('input', () => {
            if (field.classList.contains('border-red-500')) {
              validateField(field);
            }
          });
        }
      });

      // Privacy checkbox validation
      const privacy = document.getElementById('privacy');
      if (privacy) {
        privacy.addEventListener('change', () => {
          const errorEl = document.getElementById('privacy-error');
          if (privacy.checked && errorEl) {
            errorEl.classList.add('hidden');
          }
        });
      }
    })();
  </script>

  <style>
    #form-feedback {
      border: 1px solid;
    }
    #submit-btn:disabled {
      pointer-events: none;
    }
  </style>
</Layout>
