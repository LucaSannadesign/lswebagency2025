---
import Features3 from '@/components/widgets/Features3.astro';
import Hero from '@/components/widgets/Hero.astro';
import Layout from '@/layouts/PageLayout.astro';
import Testimonials from '@/components/widgets/Testimonials.astro';
import CallToAction from '@/components/widgets/CallToAction.astro';
import { Icon } from '@iconify/react';

const metadata = {
  title: 'Creazione Siti Web a Sassari | Web Design Moderno e Ottimizzato - LS Web Agency',
  description: 'Realizziamo siti web su misura a Sassari, ottimizzati per SEO, veloci e performanti. Scopri come aumentare la tua visibilit√† online con LS Web Agency.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Richiedi una consulenza',
        href: '/contatti',
      },
      {
        text: 'Portfolio',
        href: '/portfolio',
      },
    ]}
    image={{
      src: '@/assets/images/creazione-sito-web-professionale.webp',
      alt: 'Creazione siti web moderni e ottimizzati a Sassari',
      width: 800,
      height: 600,
    }}
  >
    <Fragment slot="title">
      Creazione <span class="text-accent text-gradient dark:text-white highlight">Siti Web a Sassari</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">LS Web Agency</span> realizza <strong>siti web professionali</strong>, veloci e ottimizzati per il <strong>SEO</strong>, con un design su misura per migliorare la tua visibilit√† e aumentare i clienti.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">
        Realizziamo siti web moderni per aziende e professionisti!
      </span>
      Perfetti per <strong>aziende, freelance e negozi online</strong>, i nostri siti sono progettati per convertire e migliorare la tua presenza digitale.
    </Fragment>
  </Hero>

  <!-- Servizi Offerti -->
  <Features3
    title="Caratteristiche dei Nostri Siti Web"
    subtitle="Soluzioni web su misura per aziende e professionisti"
    columns={3}
    items={[
      {
        title: 'Siti Web Personalizzati',
        description: 'Design unico e funzionalit√† avanzate per la tua attivit√†.',
        icon: 'tabler:template',
      },
      {
        title: 'SEO Avanzata',
        description: 'Ottimizzazione completa per un migliore posizionamento su Google.',
        icon: 'tabler:search',
      },
      {
        title: 'Siti Responsive',
        description: 'Perfetti per ogni dispositivo: mobile, tablet e desktop.',
        icon: 'tabler:device-desktop',
      },
    ]}
  />

  <!-- Nuovo Servizio: WordPress Slim -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-6 max-w-5xl">
      <h2 class="text-2xl font-bold text-center mb-4 text-gray-900 dark:text-white">
        üîß Novit√†: WordPress Slim
      </h2>
      <p class="text-center text-lg text-muted mb-8">
        Trasformiamo il tuo sito WordPress in una versione <strong>statica o headless</strong> per renderlo pi√π veloce, sicuro e facile da mantenere.
        Ideale per chi vuole il massimo delle prestazioni con il minimo della manutenzione.
      </p>
      <div class="text-center">
        <a href="/servizi/wordpress-slim-siti-statici-headless" class="inline-block bg-accent text-white font-semibold py-3 px-6 rounded shadow hover:shadow-lg transition">
          Scopri WordPress Slim ‚Üí
        </a>
      </div>
    </div>
  </section>

  <!-- Perch√© scegliere LS Web Agency -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-6">Perch√© scegliere noi?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <div class="space-y-6">
          <div class="flex items-start space-x-4">
            <Icon icon="tabler:trophy" class="text-accent text-3xl" />
            <div>
              <h3 class="text-lg font-semibold flex items-center">
                <Icon icon="tabler:trophy" class="mr-2 text-primary" /> Esperienza e Qualit√†
              </h3>
              <p class="text-muted">Sviluppiamo siti web da anni, con risultati garantiti.</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <Icon icon="tabler:palette" class="text-accent text-3xl" />
            <div>
              <h3 class="text-lg font-semibold flex items-center">
                <Icon icon="tabler:palette" class="mr-2 text-primary" /> Design Moderno e Unico
              </h3>
              <p class="text-muted">Interfacce intuitive e grafiche accattivanti per distinguerti online.</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <Icon icon="tabler:shield-check" class="text-accent text-3xl" />
            <div>
              <h3 class="text-lg font-semibold flex items-center">
                <Icon icon="tabler:shield-check" class="mr-2 text-primary" /> Sicurezza e Aggiornamenti
              </h3>
              <p class="text-muted">Backup, protezione da malware e aggiornamenti costanti.</p>
            </div>
          </div>
        </div>

        <div class="space-y-6">
          <div class="flex items-start space-x-4">
            <Icon icon="tabler:users" class="text-accent text-3xl" />
            <div>
              <h3 class="text-lg font-semibold flex items-center">
                <Icon icon="tabler:users" class="mr-2 text-primary" /> Assistenza Continua
              </h3>
              <p class="text-muted">Supporto post-lancio per miglioramenti e manutenzione.</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <Icon icon="tabler:graph" class="text-accent text-3xl" />
            <div>
              <h3 class="text-lg font-semibold flex items-center">
                <Icon icon="tabler:graph" class="mr-2 text-primary" /> Ottimizzazione per Conversioni
              </h3>
              <p class="text-muted">Struttura strategica per aumentare contatti e vendite.</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <Icon icon="tabler:device-mobile" class="text-accent text-3xl" />
            <div>
              <h3 class="text-lg font-semibold flex items-center">
                <Icon icon="tabler:device-mobile" class="mr-2 text-primary" /> Mobile-First
              </h3>
              <p class="text-muted">Perfetto per smartphone e tablet con UX avanzata.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sezione Testimonianze -->
  <Testimonials />

  <!-- Call to Action -->
  <CallToAction
    title="Vuoi un sito web professionale?"
    subtitle="Parliamone e troviamo la soluzione perfetta per la tua attivit√†."
  >
    <Fragment slot="actions">
      <a href="/contatti" class="btn-primary">Richiedi una consulenza</a>
    </Fragment>
  </CallToAction>
</Layout>