---
import Layout from '@/layouts/PageLayout.astro';
import Features3 from '@/components/widgets/Features3.astro';
import Testimonials from '@/components/widgets/Testimonials.astro';
import CallToAction from '@/components/widgets/CallToAction.astro';

// ✅ immagine reale dal progetto (dimensioni note)
import voucherImage from '@/assets/images/voucher-digitali-sassari-sardegna-2025.webp';

const metadata = {
  title: 'Voucher Digitali Sassari 2025 | Fino al 70% di Rimborso - LS Web Agency',
  description:
    'Scopri come ottenere un rimborso fino al 70% per la digitalizzazione della tua impresa grazie al bando 2025 della Camera di Commercio di Sassari.',
  canonical: '/servizi/voucher-digitali-sassari-2025',
};
---

<Layout metadata={metadata}>
  <!-- HERO — testo sx / immagine dx + gradient top compatto -->
  <section class="relative overflow-hidden isolate">
    <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 top-0 -z-10 h-[420px] sm:h-[460px] md:h-[500px] bg-gradient-to-b from-indigo-100/80 via-white to-transparent dark:from-indigo-900/40 dark:via-transparent"></div>

    <div class="container mx-auto px-6 pt-10 md:pt-12 pb-8">
      <div class="grid md:grid-cols-2 gap-6 items-start">
        <!-- Testo (sx) -->
        <div>
          <p class="mb-2 inline-flex items-center text-xs font-semibold uppercase tracking-wide text-indigo-700/90 dark:text-indigo-300">
            Bando • Camera di Commercio di Sassari
          </p>

          <h1 class="text-3xl md:text-5xl font-extrabold leading-tight">
            Voucher
            <span class="ml-2 bg-clip-text supports-[background-clip:text]:text-transparent bg-gradient-to-r from-neutral-900 via-indigo-700 to-indigo-600 dark:from-neutral-100 dark:via-indigo-400 dark:to-indigo-300">
              Digitali Sassari 2025
            </span>
          </h1>

          <p class="mt-3 text-base md:text-lg text-neutral-700 dark:text-neutral-300 max-w-prose">
            Ottieni <strong>fino al 70% di rimborso</strong> a fondo perduto per investimenti in <strong>digitalizzazione</strong>.
            Approfitta del bando della <strong>Camera di Commercio di Sassari</strong> per portare la tua azienda online.
          </p>

          <div class="mt-5 flex flex-wrap gap-3">
            <a href="/contatti" class="inline-flex items-center justify-center rounded-full px-6 md:px-8 py-3 text-white bg-indigo-600 hover:bg-indigo-700 transition">
              Scopri se puoi ottenere il voucher
            </a>
            <a href="/blog/voucher-digitali-sassari-2025" class="inline-flex items-center justify-center rounded-full px-6 md:px-8 py-3 ring-1 ring-neutral-300 text-neutral-900 hover:bg-neutral-100 dark:text-neutral-100 dark:ring-neutral-700 dark:hover:bg-neutral-800 transition">
              Dettagli Bando
            </a>
          </div>
        </div>

        <!-- Immagine (dx) -->
        <div class="relative flex md:justify-end">
          <img
            src={voucherImage.src}
            alt="Imprenditori sardi felici per il rimborso digitalizzazione 2025"
            class="w-[86%] md:w-[80%] lg:w-[74%] max-w-[620px] h-auto rounded-2xl shadow-lg ring-1 ring-neutral-200 dark:ring-neutral-800 object-cover"
            style="object-position:center 30%;"
            loading="eager"
            decoding="async"
            fetchpriority="high"
            width={voucherImage.width}
            height={voucherImage.height}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- DATI RAPIDI / COME FUNZIONA -->
  <section class="container mx-auto px-6 py-10">
    <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">Come funziona il Voucher 2025 (in breve)</h2>

    <div class="grid gap-4 md:grid-cols-4">
      <div class="rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50">
        <p class="text-sm text-neutral-500">Contributo</p>
        <p class="text-lg font-semibold">Fino al 70% – max 5.000 €</p>
        <p class="text-xs text-neutral-500 mt-1">Regime de minimis</p>
      </div>
      <div class="rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50">
        <p class="text-sm text-neutral-500">Spesa minima</p>
        <p class="text-lg font-semibold">3.000 € (al netto IVA)</p>
        <p class="text-xs text-neutral-500 mt-1">Spese ammissibili</p>
      </div>
      <div class="rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50">
        <p class="text-sm text-neutral-500">Periodo spese</p>
        <p class="text-lg font-semibold">01/01/2025 → 19/01/2026</p>
        <p class="text-xs text-neutral-500 mt-1">Fatture/pagamenti nel periodo</p>
      </div>
      <div class="rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50">
        <p class="text-sm text-neutral-500">Domanda online</p>
        <p class="text-lg font-semibold">20/06/2025 11:00 → 22/09/2025 18:00</p>
        <p class="text-xs text-neutral-500 mt-1">Piattaforma RESTART (SPID/CNS/CIE)</p>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-6 mt-8">
      <!-- Step by step -->
      <div class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/70 dark:bg-neutral-900/40">
        <h3 class="text-lg font-semibold">Come presentare domanda (step-by-step)</h3>
        <ol class="mt-3 space-y-2 text-sm text-neutral-700 dark:text-neutral-300 list-decimal list-inside">
          <li>Definisci il progetto e raccogli i preventivi/contratti dei fornitori.</li>
          <li>Verifica i requisiti: MPMI con sede nella circoscrizione CCIAA Sassari, regolarità contributiva, regime <em>de minimis</em>, assenza di morosità.</li>
          <li>Accedi a <strong>RESTART</strong> con SPID/CNS/CIE e firma digitale <strong>CAdES</strong>; compila la domanda e carica gli allegati richiesti.</li>
          <li>Attendi l’istruttoria: in caso di ammissione, esegui il progetto entro le scadenze e conserva tutta la documentazione.</li>
          <li>Rendiconta su RESTART (fatture, pagamenti, relazione finale); la Camera di Commercio liquida il contributo.</li>
        </ol>
        <p class="mt-3 text-xs text-neutral-500">NB: le spese devono essere tracciabili (bonifici/mezzi equivalenti) e coerenti con gli interventi ammissibili.</p>
      </div>

      <!-- Requisiti & regole -->
      <div class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/70 dark:bg-neutral-900/40">
        <h3 class="text-lg font-semibold">Requisiti principali & regole</h3>
        <ul class="mt-3 space-y-2 text-sm text-neutral-700 dark:text-neutral-300">
          <li>Beneficiari: <strong>micro, piccole e medie imprese (MPMI)</strong> di qualunque settore con sede nella circoscrizione CCIAA Sassari.</li>
          <li><strong>Massimale voucher 5.000 €</strong> per impresa; dotazione complessiva <strong>250.000 €</strong>.</li>
          <li>Progetti su tecnologie e servizi <strong>I4.0</strong> e digitalizzazione (consulenza/formazione, beni e servizi strumentali).</li>
          <li>Premialità: previsto <strong>bonus 250 €</strong> per imprese con <em>rating di legalità</em> (se indicato nel bando).</li>
          <li>Non cumulabile con altri aiuti sulle stesse spese; applicazione del regolamento <em>de minimis</em>.</li>
        </ul>
        <div class="mt-3 text-sm">
          <a href="https://www.ss.camcom.it/bando-voucher-digitali-i4-0-anno-2025/" class="underline decoration-indigo-600 underline-offset-2" target="_blank" rel="noopener">
            Bando ufficiale CCIAA Sassari
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- SPESE AMMISSIBILI -->
  <Features3
    title="Spese ammissibili con il Voucher"
    subtitle="Il bando 2025 copre numerosi servizi digitali."
    columns={3}
    isBeforeContent={true}
    items={[
      { title: 'Siti Web e SEO', description: 'Creazione o restyling di siti professionali ottimizzati per i motori di ricerca.', icon: 'tabler:world-www' },
      { title: 'E-commerce e CRM', description: 'Piattaforme per vendere online e gestire relazioni con i clienti.', icon: 'tabler:shopping-cart' },
      { title: 'Sicurezza e Cloud', description: 'Backup, cloud hosting e protezione dei dati aziendali.', icon: 'tabler:shield-lock' },
      { title: 'Digital Marketing', description: 'Campagne pubblicitarie, social media e analisi delle performance.', icon: 'tabler:share-3' },
      { title: 'Formazione del personale', description: 'Percorsi formativi legati alle competenze digitali.', icon: 'tabler:school' },
      { title: 'Software gestionali', description: 'Strumenti ERP, fatturazione elettronica e gestione dei flussi.', icon: 'tabler:device-desktop-analytics' },
    ]}
  />

  <Testimonials />

  <CallToAction
    title="Richiedi subito una consulenza gratuita"
    subtitle="Scopri se la tua azienda può beneficiare del voucher digitale 2025."
  >
    <span slot="actions">
      <a href="/contatti" class="btn-primary whitespace-nowrap px-6 md:px-8">Contattaci</a>
      <a href="/blog/voucher-digitali-sassari-2025" class="btn-secondary whitespace-nowrap px-6 md:px-8">Dettagli Bando</a>
    </span>
  </CallToAction>
</Layout>