---
import Layout from '@/layouts/PageLayout.astro';
import Features3 from '@/components/widgets/Features3.astro';
import CallToAction from '@/components/widgets/CallToAction.astro';
import voucherImage from '@/assets/images/voucher-digitali-sassari-sardegna-2025.webp';

const metadata = {
  title: 'Voucher Digitali Sardegna 2025 | Guida pratica e assistenza - LS Web Agency',
  description:
    'Informazioni chiare sui Voucher Digitali 2025 in Sardegna: requisiti, spese ammissibili, scadenze e come ottenere assistenza per la domanda.',
  canonical: 'https://www.lswebagency.com/voucher-digitali-sardegna',
};

const cards = [
  { label: 'Contributo', value: 'Fino al 70% – max 5.000 €', note: 'Regime de minimis' },
  { label: 'Spesa minima', value: '3.000 € (al netto IVA)', note: 'Spese ammissibili' },
  { label: 'Periodo spese', value: '01/01/2025 → 19/01/2026', note: 'Fatture e pagamenti nel periodo' },
  { label: 'Domanda online', value: '20/06/2025 11:00 → 22/09/2025 18:00', note: 'Piattaforma RESTART (SPID/CNS/CIE)' },
];
---

<Layout metadata={metadata}>
  <!-- HERO -->
  <section class="relative overflow-hidden isolate">
    <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 top-0 -z-10 h-[420px] sm:h-[460px] md:h-[500px] bg-gradient-to-b from-indigo-100/80 via-white to-transparent dark:from-indigo-900/40 dark:via-transparent"></div>

    <div class="container mx-auto px-6 pt-10 md:pt-12 pb-8">
      <div class="grid md:grid-cols-2 gap-6 items-start">
        <div>
          <p class="mb-2 inline-flex items-center text-xs font-semibold uppercase tracking-wide text-indigo-700/90 dark:text-indigo-300">
            Bandi Voucher Digitali • Regione Sardegna
          </p>
          <h1 class="text-3xl md:text-5xl font-extrabold leading-tight">
            Voucher Digitali <span class="ml-2 bg-clip-text supports-[background-clip:text]:text-transparent bg-gradient-to-r from-neutral-900 via-indigo-700 to-indigo-600 dark:from-neutral-100 dark:via-indigo-400 dark:to-indigo-300">Sardegna 2025</span>
          </h1>
          <p class="mt-3 text-base md:text-lg text-neutral-700 dark:text-neutral-300 max-w-prose">
            Ottieni <strong>fino al 70% di rimborso</strong> a fondo perduto per progetti di <strong>digitalizzazione</strong>.
            Ti aiutiamo a valutare requisiti, preparare la domanda e rendicontare in modo corretto.
          </p>
          <div class="mt-5 flex flex-wrap gap-3">
            <a href="/contatti" class="inline-flex items-center justify-center rounded-full px-6 md:px-8 py-3 text-white bg-indigo-600 hover:bg-indigo-700 transition">
              Verifica idoneità gratuita
            </a>
            <a href="/servizi/voucher-digitali-sassari-2025" class="inline-flex items-center justify-center rounded-full px-6 md:px-8 py-3 ring-1 ring-neutral-300 text-neutral-900 hover:bg-neutral-100 dark:text-neutral-100 dark:ring-neutral-700 dark:hover:bg-neutral-800 transition">
              Dettagli CCIAA Sassari 2025
            </a>
          </div>
        </div>

        <div class="relative flex md:justify-end">
          <img
            src={voucherImage.src}
            alt="Voucher Digitali in Sardegna 2025: impresa che digitalizza i processi con supporto LS Web Agency"
            class="w-[86%] md:w-[80%] lg:w-[74%] max-w-[620px] h-auto rounded-2xl shadow-lg ring-1 ring-neutral-200 dark:ring-neutral-800 object-cover"
            style="object-position:center 30%;"
            loading="eager"
            decoding="async"
            fetchpriority="high"
            width={voucherImage.width}
            height={voucherImage.height}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- DATI RAPIDI -->
  <section class="container mx-auto px-6 py-10">
    <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">Come funziona (in breve)</h2>
    <div class="grid gap-4 md:grid-cols-4">
      {cards.map((c) => (
        <div class="rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/80 dark:bg-neutral-900/50">
          <p class="text-sm text-neutral-500">{c.label}</p>
          <p class="text-lg font-semibold">{c.value}</p>
          <p class="text-xs text-neutral-500 mt-1">{c.note}</p>
        </div>
      ))}
    </div>

    <div class="grid md:grid-cols-2 gap-6 mt-8">
      <div class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/70 dark:bg-neutral-900/40">
        <h3 class="text-lg font-semibold">Step per presentare domanda</h3>
        <ol class="mt-3 space-y-2 text-sm text-neutral-700 dark:text-neutral-300 list-decimal list-inside">
          <li>Definisci il progetto e raccogli preventivi/contratti fornitori.</li>
          <li>Verifica i requisiti dell’ente competente (es. <strong>CCIAA Sassari</strong> per le imprese in circoscrizione).</li>
          <li>Accedi alla piattaforma indicata nel bando (es. <strong>RESTART</strong>) con SPID/CNS/CIE; firma digitale di tipo <strong>CAdES</strong>.</li>
          <li>Esegui il progetto e conserva documenti, fatture e pagamenti tracciabili.</li>
          <li>Rendiconta entro le scadenze: contributo liquidato a esito positivo.</li>
        </ol>
        <p class="mt-3 text-xs text-neutral-500">Le finestre e le regole operative variano per Camera di Commercio. Contattaci per il caso specifico.</p>
      </div>

      <div class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/70 dark:bg-neutral-900/40">
        <h3 class="text-lg font-semibold">Interventi finanziabili (esempi)</h3>
        <ul class="mt-3 space-y-2 text-sm text-neutral-700 dark:text-neutral-300">
          <li>Siti web veloci e SEO-ready, e-commerce, CRM.</li>
          <li>Automazioni AI, cloud, sicurezza e backup.</li>
          <li>Local SEO & Google Business Profile.</li>
          <li>Formazione personale su competenze digitali.</li>
        </ul>
        <div class="mt-3 text-sm">
          <a href="/servizi/voucher-digitali-sassari-2025" class="underline decoration-indigo-600 underline-offset-2">
            Vai alla scheda Sassari 2025
          </a>
        </div>
      </div>
    </div>
  </section>

  <Features3
    title="Perché lavorare con LS Web Agency"
    subtitle="Affianchiamo la tua impresa dalla domanda alla rendicontazione."
    columns={3}
    isBeforeContent={true}
    items={[
      { title: 'Strategia + Esecuzione', description: 'Progetto tecnico, implementazione e documentazione coerente al bando.', icon: 'tabler:checkup-list' },
      { title: 'Performance & SEO', description: 'Siti headless/statici, Core Web Vitals e SEO locale/nazionale.', icon: 'tabler:rocket' },
      { title: 'Assistenza puntuale', description: 'Supporto su piattaforme (es. RESTART) e verifiche formali.', icon: 'tabler:lifebuoy' },
    ]}
  />

  <CallToAction
    title="Hai dubbi su requisiti o scadenze?"
    subtitle="Ti rispondiamo rapidamente e verifichiamo l’idoneità senza impegno."
  >
    <span slot="actions">
      <a href="/contatti" class="btn-primary whitespace-nowrap px-6 md:px-8">Contattaci</a>
      <a href="/servizi/voucher-digitali-sassari-2025" class="btn-secondary whitespace-nowrap px-6 md:px-8">Dettagli Sassari 2025</a>
    </span>
  </CallToAction>
</Layout>