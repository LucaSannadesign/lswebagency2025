---
import Layout from '@/layouts/PageLayout.astro';

export const prerender = true;

const metadata = {
  title: 'AI Blog Engine — Contenuti SEO con Intelligenza Artificiale | LS Web Agency',
  description:
    'Piano editoriale, brief, stesura assistita dall’AI e revisione umana. Pubblicazioni costanti e ottimizzate per posizionarsi su Google.',
  canonical: '/servizi/ai-blog-engine',
  robots: { index: true, follow: true },
  openGraph: {
    url: '/servizi/ai-blog-engine',
    images: [{ url: '/og/ai-blog-engine.jpg', width: 1200, height: 630 }],
    type: 'website',
  },
  twitter: {
    cardType: 'summary_large_image',
    handle: '@lswebagency',
    site: '@lswebagency',
  },
};
---

<Layout metadata={metadata}>
  <!-- HERO -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 -z-10 bg-gradient-to-b from-indigo-100 via-white to-white dark:from-indigo-900/25 dark:via-transparent"></div>
    <div class="container mx-auto px-6 pt-16 pb-10">
      <span class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold bg-indigo-100 text-indigo-700 dark:bg-indigo-900/40 dark:text-indigo-200 ring-1 ring-indigo-200/60 dark:ring-indigo-700/50">
        Contenuti • SEO • AI
      </span>
      <h1
        class="mt-4 text-3xl md:text-5xl font-extrabold leading-tight
               text-transparent bg-clip-text [-webkit-text-fill-color:transparent]
               bg-gradient-to-r from-black via-indigo-700 to-indigo-300
               dark:from-white dark:via-indigo-400 dark:to-indigo-200">
        AI Blog Engine: più articoli, meglio posizionati
      </h1>
      <p class="mt-3 max-w-3xl text-base md:text-lg text-neutral-700 dark:text-neutral-300">
        Workflow che unisce <strong>ricerca keyword</strong>, <strong>brief</strong>, stesura assistita dall’AI e
        <strong>revisione editoriale umana</strong>. Pubblicazioni costanti, qualità alta, SEO al centro.
      </p>
      <div class="mt-6 flex flex-wrap gap-3">
        <a href="/contatti" class="inline-flex items-center justify-center rounded-full px-5 py-3 bg-black text-white hover:opacity-90 transition">Richiedi una demo</a>
        <a href="/servizi/ottimizzazione-seo-siti-web" class="inline-flex items-center justify-center rounded-full px-5 py-3 border border-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800">SEO Services</a>
      </div>
    </div>
  </section>

  <!-- COSA INCLUDE -->
  <section class="container mx-auto px-6 py-12 grid gap-8 md:grid-cols-2">
    <div>
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Cosa include</h2>
      <ul class="space-y-4 text-neutral-700 dark:text-neutral-300">
        <li>
          <span class="font-semibold text-indigo-700 dark:text-indigo-300">Keyword & Topic Research</span><br />
          Cluster tematici e priorità basate su intenti e difficoltà.
        </li>
        <li>
          <span class="font-semibold text-indigo-700 dark:text-indigo-300">Brief Editoriali</span><br />
          Outline, heading, PAA, FAQ e schema markup suggerito.
        </li>
        <li>
          <span class="font-semibold text-indigo-700 dark:text-indigo-300">Stesura con AI + Editor</span><br />
          Bozza AI, fact-check, stile, esempi e call to action pertinenti.
        </li>
        <li>
          <span class="font-semibold text-indigo-700 dark:text-indigo-300">Ottimizzazione & Pubblicazione</span><br />
          Meta, internal linking, immagini e programmazione calendario.
        </li>
      </ul>
    </div>

    <div>
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Perché funziona</h2>
      <ul class="space-y-3 text-neutral-700 dark:text-neutral-300">
        <li>✅ Costanza di pubblicazione con qualità editoriale</li>
        <li>✅ Copertura del topic e segnali E-E-A-T più solidi</li>
        <li>✅ Tempi ridotti e maggiore ROI dei contenuti</li>
        <li>✅ Miglior allineamento con la strategia SEO</li>
      </ul>
    </div>
  </section>

  <!-- PIANI ESEMPLIFICATIVI -->
  <section class="container mx-auto px-6 pb-6">
    <h2 class="text-2xl md:text-3xl font-bold mb-6">Percorsi tipo</h2>
    <div class="grid gap-6 md:grid-cols-3">
      <div class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/70 dark:bg-neutral-900/50">
        <h3 class="text-xl font-semibold">Starter</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-400 mt-1">2–4 articoli/mese</p>
        <ul class="mt-4 space-y-2 text-sm">
          <li>• Keyword research essenziale</li>
          <li>• Brief + stesura AI</li>
          <li>• Revisione editoriale leggera</li>
        </ul>
      </div>
      <div class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/70 dark:bg-neutral-900/50">
        <h3 class="text-xl font-semibold">Growth</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-400 mt-1">4–8 articoli/mese</p>
        <ul class="mt-4 space-y-2 text-sm">
          <li>• Topic cluster</li>
          <li>• Brief avanzati + schema</li>
          <li>• Ottimizzazione on-page completa</li>
        </ul>
      </div>
      <div class="rounded-2xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/70 dark:bg-neutral-900/50">
        <h3 class="text-xl font-semibold">Pro</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-400 mt-1">8–12 articoli/mese</p>
        <ul class="mt-4 space-y-2 text-sm">
          <li>• Copertura topic & aggiornamenti</li>
          <li>• Revisione esperto + esempi</li>
          <li>• Report e roadmap mensile</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- PROCESSO -->
  <section class="container mx-auto px-6 py-10">
    <h2 class="text-2xl md:text-3xl font-bold mb-6">Come lavoriamo</h2>
    <div class="grid md:grid-cols-4 gap-4">
      {[
        ['1. Analisi', 'Audit contenuti + mappa topic.'],
        ['2. Piano', 'Calendario editoriale e brief.'],
        ['3. Produzione', 'AI assist + revisione editoriale.'],
        ['4. Pubblicazione', 'Ottimizzazione on-page + report.'],
      ].map(([t, d]) => (
        <div class="rounded-2xl p-5 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-white/70 dark:bg-neutral-900/50">
          <h3 class="font-semibold">{t}</h3>
          <p class="text-sm text-neutral-700 dark:text-neutral-300 mt-1">{d}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- CTA -->
  <section class="container mx-auto px-6 pb-12">
    <div class="rounded-3xl p-6 ring-1 ring-neutral-200 dark:ring-neutral-800 bg-gradient-to-br from-indigo-600 to-indigo-500 text-white flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h3 class="text-xl font-semibold">Vuoi vedere una demo basata sul tuo settore?</h3>
        <p class="opacity-90">Scrivici: prepariamo un esempio di topic cluster e un articolo pilota.</p>
      </div>
      <div class="flex gap-2">
        <a href="/contatti" class="inline-flex items-center justify-center rounded-full px-5 py-3 bg-black text-white hover:opacity-90 transition">Parla con Luca</a>
        <a href="/servizi/ottimizzazione-seo-siti-web" class="inline-flex items-center justify-center rounded-full px-5 py-3 bg-white text-indigo-700 ring-1 ring-indigo-200 hover:bg-indigo-50">Servizi SEO</a>
      </div>
    </div>
  </section>

  <!-- JSON-LD -->
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Service",
      "name": "AI Blog Engine",
      "provider": { "@type": "Organization", "name": "LS Web Agency" },
      "areaServed": "IT",
      "description": "Piano editoriale, brief, stesura assistita dall’AI e revisione umana per contenuti SEO di qualità."
    })}
  </script>
</Layout>